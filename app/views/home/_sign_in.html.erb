<div id="sign_in">
  <legend>Lenit&nbsp;<%= t("app.signin") %></legend>
  <%= simple_form_for(@user, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical'}) do |f| %>
    <%= f.input :email, :label => false, :autofocus => true %>
    <%= f.input :password, :label => false %>
    <div class="control-group">
      <div class="controls">
        <%= f.input :remember_me, :as => :boolean, :inline_label => t("app.remember_me"), :label => false if devise_mapping.rememberable? %>
        <div class="form-actions span4">
          <%= f.button :submit, t("app.signin"), :class => 'btn-primary' %>
          <%= link_to t("app.signup"), new_user_registration_path, :class => "btn btn-medium" %>
        </div>
      </div>
    </div>
  <% end %>
<!--   <%= render "devise/shared/links" %> -->
</div>