<%= simple_form_for([current_user, @provider], :html => {:class => 'form-horizontal'}) do |f| %>
  <legend><%= t("app.titles.provider") %></legend>

  <%= f.error_messages %>

  <%= f.input :name, :required => true %>
  <%= f.input :description, :as => :text, input_html: { rows: 8 } %>
  <%= form_actions f %>
<% end %>